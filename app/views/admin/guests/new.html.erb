<turbo-frame id="new-guest" autoscroll="true">
  <%= form_with model: [:admin, @party, @invite, @guest], url: admin_party_invite_guests_path(@party.admin_param, @invite.invite_param), html: { class: 'form' }, data: { "turbo-frame": 'guests' } do |p| %>
    <div class="field">
      <%= p.label :name, class: 'label required' %>
      <div class="control">
        <%= p.text_field :name, class: "input", required: true %>
      </div>
    </div>

    <div class="field">
      <p class="control">
        <%= p.submit 'Salvar', class: 'button is-success' %>
        <%= link_to 'Cancelar', admin_party_invite_guests_path(@party.admin_param, @invite.invite_param), class: 'button' %>
      </p>
    </div>
  <% end %>
</turbo-frame>
