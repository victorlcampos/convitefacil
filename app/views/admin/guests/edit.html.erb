<turbo-frame id="guests" autoscroll=true>
  <h1 class="title">Festa: <%= @party.name %> > Fam√≠lia: <%= @invite.family_name %> > <%= @guest.name %></h1>

  <%= form_with model: [:admin, @party, @invite, @guest], url: admin_party_invite_guest_path(@party.admin_param, @invite.invite_param, @guest), html: { class: 'form' } do |p| %>
    <div class="field">
      <%= p.label :name, class: 'label required' %>
      <div class="control">
        <%= p.text_field :name, class: "input", required: true %>
      </div>
    </div>

    <div class="field">
      <%= p.label :status, class: 'label required' %>
      <div class="control">
        <%= p.select :status, options_for_select(Guest.statuses.map { |k, v| [k, k] }, @guest.status), class: "select" %>
      </div>
    </div>

    <div class="field scroll-to">
      <p class="control">
        <%= p.submit :save, class: 'button is-success' %>
        <%= link_to 'Voltar', admin_party_invite_guests_path(@party.admin_param, @invite.invite_param), class: 'button' %>
      </p>
    </div>
  <% end %>
</turbo-frame>
